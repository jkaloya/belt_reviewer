<html>
    <head>
       <title>Registration and Login</title>
    </head>
    <body>
        <div id='wrapper'>
            <div class='register'>
                <h4>Register</h4>
                <form action='/users' method='POST'>
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>First Name: <input type='text' name='user[first_name]'></p>
                    <p>Last Name: <input type='text' name='user[last_name]'></p>
                    <p>Email: <input type='text' name='user[email]'></p>
                    <p>Location: <input type='text' name='user[location]'>
                    <select name='user[state]'>
                        <% @states.each do |s| %>
                            <option value="<%= s %>"><%= s %></option>
                        <% end %>
                    </select></p>
                    <p>Password: <input type='password' name='user[password]'></p>
                    <p>Password Confirmation: <input type='password' name='user[password_confirmation]'><p>
                    <input type='submit' value='Register'>
                </form>
            </div>
            <% if flash[:errors] %>
                <% flash[:errors].each do |i| %>
                    <ul style="list-style: none;">
                        <li><%= i %></li>
                    </ul>
                <% end %>
            <% end %>
            <div class='login'>
                <h4>Login</h4>
                <form action='/sessions' method='POST'>
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>Email: <input type='text' name='Email'></p>
                    <p>Password: <input type='password' name='Password'></p>
                    <input type='submit' value='Log In'>
                </form>
            </div>
        </div>
    </body>
</html>
